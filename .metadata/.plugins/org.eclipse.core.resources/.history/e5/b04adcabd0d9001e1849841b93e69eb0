	public static void main(String[] args) {
		// TODO Auto-generated method stub

		int a = 10;
		int b = 5;
		int c = 15;

		// Formas de no crear una variable
		// var HolaMundo = 12;
		// var #hola = 3;

		// Asi se hace la concatenación
		int suma = a + b + c;
		System.out.println("La suma de a, b y c es: " + suma);

		// Salto de linea:

		int i = 100;
		int j = 50;
		int k = 150;

		int resta = i - j - k;
		System.out.println("Salto de linea: \n" + resta);
		// poner un tablulador:
		System.out.println("Salto de linea: \t" + "Hola");

	}
	
	public static void solicitar(String[] args) {
		
		Integer num1 = null;
